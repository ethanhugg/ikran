if sys.platform == "win32":
  buildResult = env.SharedLibrary(outputlibname, src_files, LIBS=libs, LIBPATH=libpath)
else:
  buildResult = env.Program(outputlibname, src_files, LIBS=libs, LIBPATH=libpath)


if sys.platform =='win32':
  Depends(buildResult, '../' + componentName + suffixName + '.lib')
else:
  Depends(buildResult, '../lib' + componentName + suffixName + '.a')

